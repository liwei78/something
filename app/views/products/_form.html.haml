= form_for @product, :html => { :class => 'form-horizontal' } do |f|

  %fieldset
    %legend Infomation
    .control-group
      = f.label :sku, :class => 'control-label'
      .controls
        = f.text_field :sku, :class => 'text_field'
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :class => 'text_field'
    .control-group
      = f.label :permalink, :class => 'control-label'
      .controls
        = f.text_field :permalink, :class => 'text_field'
    .control-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.text_area :description, rows: 4, class: 'input-block-level'

  %fieldset
    %legend Sales
    .control-group
      = f.label :sale_price, :class => 'control-label'
      .controls
        = f.text_field :sale_price, :class => 'text_field'
    .control-group
      = f.label :retail_price, :class => 'control-label'
      .controls
        = f.text_field :retail_price, :class => 'text_field'
    .control-group
      = f.label :commission_amount, :class => 'control-label'
      .controls
        = f.text_field :commission_amount, :class => 'text_field'

  %fieldset
    %legend Avaliable
    .control-group
      = f.label :available_on, :class => 'control-label'
      .controls
        = f.text_field :available_on, :class => 'text_field'
    .control-group
      = f.label :deleted_at, :class => 'control-label'
      .controls
        = f.text_field :deleted_at, :class => 'text_field'


  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn'
